<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.BookActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textAlignment="center"
                android:paddingBottom="15dp"
                android:textColor="@color/white"
                android:id="@+id/encabezado"
                android:textSize="25sp"
                android:layout_marginTop="0dp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:background="@color/md_theme_light_primary"
                android:text="Ingresar Libro"
                />

            <ImageView
                android:id="@+id/imagenLibro"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/encabezado"
                android:src="@drawable/baseline_menu_book_24"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="seleccionarImagen"
                android:text="Seleccionar Imagen"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imagenLibro"
                android:fontFamily="serif"
                android:backgroundTint="@color/md_theme_light_secondary"
                android:layout_marginTop="16dp"/>


        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título:"
            android:textSize="24dp"
            android:layout_below="@+id/btnSeleccionarImagen"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSeleccionarImagen"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/textViewTitulo"
            android:hint="Titulo" />

        <TextView
            android:id="@+id/textViewAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor:"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/editTextTitulo"
            android:layout_marginStart="16dp"
            />

        <EditText
            android:id="@+id/editTextAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTitulo"
            android:layout_toEndOf="@id/textViewAutor"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genero:"
            android:layout_below="@id/editTextAutor"
            android:layout_marginStart="16dp"
            android:textSize="24dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/editTextGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextAutor"
            android:layout_toEndOf="@id/textViewGenero"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewAnioPublicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año de publicación:"
            android:layout_below="@id/editTextGenero"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextAnioPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewAnioPublicacion"
            android:layout_marginTop="16dp"
            android:layout_below="@id/editTextGenero"
            android:layout_marginEnd="16dp"
            android:inputType="date"
            android:hint="Ingrese la Fecha" />

        <CheckBox
            android:id="@+id/checkBoxEstadoPrestamo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libro prestado"
            android:textSize="24dp"
            android:layout_below="@+id/editTextAnioPublicacion"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="@color/white"
            android:layout_below="@id/checkBoxEstadoPrestamo"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:layout_marginTop="24dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>