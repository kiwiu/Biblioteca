<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.UserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textAlignment="center"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:id="@+id/encabezado"
            android:textSize="25sp"
            android:layout_marginTop="0dp"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:background="@color/md_theme_light_primary"
            android:text="Ingresar Usuario"
            />

        <ImageView
            android:id="@+id/imagenLibro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/encabezado"
            android:src="@drawable/baseline_person_24"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"/>



        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="24dp"
            android:layout_below="@+id/imagenLibro"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewNombre"
            android:layout_below="@+id/imagenLibro"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewNumeroBiblioteca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de biblioteca:"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/editTextNombre"
            android:layout_marginStart="16dp"
            />

        <EditText
            android:id="@+id/editTextNumeroBiblioteca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextNombre"
            android:layout_toEndOf="@id/textViewNumeroBiblioteca"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:inputType="number"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion:"
            android:layout_below="@id/editTextNumeroBiblioteca"
            android:layout_marginStart="16dp"
            android:textSize="24dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/editTextDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextNumeroBiblioteca"
            android:layout_toEndOf="@id/textViewDireccion"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono:"
            android:layout_below="@id/editTextDireccion"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewTelefono"
            android:layout_marginTop="16dp"
            android:layout_below="@id/editTextDireccion"
            android:layout_marginEnd="16dp"
            android:inputType="number"
            android:hint="0000-0000" />



        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="@color/white"
            android:layout_below="@id/editTextTelefono"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:backgroundTint="@color/md_theme_light_secondary"
            android:layout_marginTop="24dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>